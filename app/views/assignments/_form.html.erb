<style>
input {
  margin-bottom: 20px;
  margin-top: 20px;
  width: 200px;
  height: 30px;
  font-size: 12px;
  font-weight: 300;
  border-color: #007bff;
}
textarea {
  margin-bottom:16px;
  width: 400px;
  height: 170px;
  font-size: 12px;
  font-weight: 300;
  border-color: #007bff;
}
.add-assignment-button {
  margin-bottom: 0px;
  margin-top: 0px;
  border-radius: 50px;
  background-color: white;
  border-color: #007bff;
  color:#007bff;
  font-weight: 400;
}
</style>
<%= form_with model: [:user, @assignment], local: true do |form| %>
 
    <% if @assignment.errors.any? %>
      <div id="error_explained">
        <h2>
          <%= pluralize(@assignment.errors.count, "error") %> prohibited
          this article from being saved:
        </h2>
        <ul>
          <% @assignment.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
   
    <div class="d-flex justify-content-around">
      <p>
        <%= form.text_field :title, placeholder: 'Title' %>
      </p>

      <p>
        <%= form.text_field :deadline, placeholder: 'Deadline' %>
      </p>
    </div>
    <div class="d-flex justify-content-center">
      <p>
        <%= form.text_area :discription, placeholder: 'Enter any additional information' %>
      </p>
    </div>
   
    <div class="d-flex justify-content-around">
      <p>
        <%= form.submit 'Add Assignment', :class => 'add-assignment-button' %>
      </p>

      <p>
        <%= link_to 'Cancel', '/users/:user_id/assignments' %>
      </p>
    </div>
   
  <% end %>